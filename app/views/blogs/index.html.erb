<p><%= notice %></p>

<h2>ブログ一覧ページ</h2>

<table>
  <thead>
    <tr>
      <th>表題</th>
      <th>内容</th>
  </thead>
  
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to '詳細', blog_path(blog.id) %></td>
        <td><%= link_to '編集', edit_blog_path(blog) %></td>
        <td><%= link_to '削除', blog_path(blog.id), data: { turbo_method: :delete, turbo_confirm: '本当に削除して良いですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'ブログを新規作成する', new_blog_path %>
